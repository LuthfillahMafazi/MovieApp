<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimmer_banner_home"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:shimmer_colored="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/shimmerPrimary"
            app:layout_constraintDimensionRatio="2:1.124"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@color/shimmerSecond"
            app:layout_constraintBottom_toBottomOf="@id/view_image"
            app:layout_constraintStart_toStartOf="@id/view_image" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.facebook.shimmer.ShimmerFrameLayout>